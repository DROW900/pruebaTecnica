@model UsuarioModel
@{
    ViewData["Title"] = "Registro de Usuarios";
}

<h1>Registro de usuarios</h1>

<form method="post" class="form-floating">
    <div class="form-group">
        <label asp-for="Nombre">Nombre(s)</label>
        <input type="text" class="form-control" asp-for=Nombre/>
    </div>
    <div class="form-group">
        <label asp-for="Paterno">Apellido Paterno</label>
        <input type="text" class="form-control" asp-for=Paterno/>
    </div>
    <div class="form-group">
        <label asp-for=Materno>Apellido Materno</label>
        <input type="text" class="form-control" asp-for=Materno/>
    </div>
    <div class="form-group">
        <label asp-for="Sueldo"></label>
        <input type="number" class="form-control" asp-for=Sueldo/>
    </div>
    <div class="form-group">
        <label asp-for="Sueldo"></label>
        <input type="date" class="form-control" asp-for=FechaIngreso/>
    </div>
    <br />
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
    </div>
</form>
